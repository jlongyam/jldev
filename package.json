{
  "name": "jldev",
  "version": "1.0.0",
  "displayName": "cross dev lib",
  "main": "app/index.html",
  "engines": {
    "node": ">=18.16"
  },
  "type": "module",
  "workspaces": [
    "./packages/script",
    "./packages/docs/system/examples/*"
  ],
  "scripts": {
    "monaca:preview": "npm run dev",
    "dev": "browser-sync start -s www/ --watch --port 8080 --ui-port 8081",
    "build": "rollup -c",
    "server": "php -S localhost:6969 -t ./app ./cli/php/server/start.php",
    "app": "nw app"
  },
  "dependencies": {
    "monaca-plugin-monaca-core": "3.3.1",
    "systemjs": "^6.15.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.7",
    "@babel/plugin-transform-modules-systemjs": "^7.25.9",
    "@babel/preset-env": "^7.26.7",
    "@rollup/plugin-buble": "^1.0.3",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/wasm-node": "^4.34.3",
    "browser-sync": "^3.0.3",
    "buble": "^0.20.0",
    "cordova": "^12.0.0",
    "rollup": "^4.34.3",
    "terser": "^5.38.1",
    "to-esm": "^2.27.4"
  },
  "browserslist": ">0.3%, ie 9, safari 5, firefox ESR",
  "cordova": {
    "plugins": {
      "monaca-plugin-monaca-core": {}
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlongyam/jldev.git"
  },
  "author": "jlongyam",
  "license": "Boost Software",
  "homepage": "https://github.com/jlongyam/jldev#readme"
}
